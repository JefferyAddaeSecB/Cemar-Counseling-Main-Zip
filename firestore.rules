rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - auth & role management
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (
        // Therapists can see clients they have appointments with
        exists(/databases/$(database)/documents/appointments/$(userId))
      );
    }

    // Therapists collection
    match /therapists/{therapistId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == therapistId;
    }

    // Appointments - only therapist and client can access their own
    match /appointments/{appointmentId} {
      allow read: if request.auth != null && (
        resource.data.therapistId == request.auth.uid ||
        resource.data.clientId == request.auth.uid
      );
      
      allow create, update: if request.auth != null && (
        resource.data.therapistId == request.auth.uid
      );
      
      allow delete: if request.auth != null && (
        resource.data.therapistId == request.auth.uid
      );
    }

    // Client profiles (therapists can view clients they work with)
    match /clients/{clientId} {
      allow read: if request.auth != null && (
        request.auth.uid == clientId ||
        exists(/databases/$(database)/documents/appointments)
      );
      allow write: if request.auth != null && request.auth.uid == clientId;
    }

    // Profiles collection (user profiles)
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Stats for therapist dashboard
    match /stats/{statId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions write
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
